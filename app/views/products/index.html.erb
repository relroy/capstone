<div ng-app="app">
  <div ng-controller="productsCtrl">
              {{ 1+1 }}
    <div class="container" ng-init="currentUserId = <%= current_user.id %>">
      <div class = "row">
        <div class="col-md-9">
          <div class = 'templogo'>
            <a><a href = "http://www.oberweis.com"><img src='/assets/franchise_store_logo_w-cows.jpg'style='width:300px;height:60px;'></a><h3>Home Treat Delivery</h3>
          </div>
        </div>
      </div>

    <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-sm">Small modal</button> -->

    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-sm">
        <div class="modal-content">
          <div ng-repeat="flavor in flavors" ng-click="updateFlavor(flavor)" data-dismiss="modal">
            <div class="flavors"><button type="button" class="btn btn">{{ flavor.name }}</button></div>
          </div>
        </div>
      </div>
    </div>

    <%= render 'carted_products/price_display' %>
    <div class='tempproducts'>
      <div ng-repeat="product in products">
        <div class="col-md-3">
          <div class="thumb" ng-click="addToCart(product)" data-toggle="modal" data-target=".bs-example-modal-sm"> 
              <h4><div>{{product.name}}</div></h4>
              <h4>{{product.price}}</h4>
              <img src="assets/{{product.photo}}" height="135" width="100">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>