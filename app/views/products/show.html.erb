<div class = "container-fluid">
<h1><%= @product.name %></h1>
<%= image_tag @product.photo, :width => "100", :height => "135" %>
</div>
<% if user_signed_in? %>
    <%= form_for @carted_product do |f| %>
      <%= f.label :quantity %>
      <%= f.text_field :quantity %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.submit "Add To Cart" %>
    <% end %>
<% end %>    