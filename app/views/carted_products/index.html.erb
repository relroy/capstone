<div class="container">
  <div class = "row">
    <div class="col-md-9">
      <div class = 'templogo'>
        <a href = "http://www.oberweis.com"><img src='/assets/franchise_store_logo_w-cows.jpg' style='width:300px;height:60px;'></a><h3>Home Treat Delivery</h3>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-3">
      <div class = 'temptotal'>
        <h1>Your Order:</h1><br>
          <table class= "table">
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
              

            </tr> 
            <% @sub_total = 0 %>
            <% @carted_products.each do |carted_product| %>
              <tr>
                <td><%= carted_product.product.name %></td>
                <td><%= carted_product.quantity %></td>
                <td>$<%= carted_product.product.price * carted_product.quantity %></td>
                <% @sub_total +=  carted_product.product.price * carted_product.quantity %>
              </tr>
            <% end %>
                <th>Your Sub Total:</th>
                <td>$<%= @order.sub_total %><br></td>
                <th>Sales Tax</th>
                <td>$<%= @order.sales_tax %><br></td>
          </table>
            <%= form_for @order do |f| %>
              <%= f.submit "Complete Purchase" %>
            <% end %>            
      </div>
    </div>
    <div class = 'tempproducts'> 
      <% @products.each do |product| %> 
      <p>
        <div class="col-md-3">
          <div class="thumb"> 

             <h4><%= product.name %></h4>            
             <%= image_tag product.photo, :width => "100", :height => "135" %>
             <p>Price: <%= product.price %>
              </p>
              <div><% if user_signed_in? %>
                    <%= form_for @carted_product do |f| %>
                      <%= f.label :quantity %>
                      <%= f.text_field :quantity %>
                      <%= f.hidden_field :product_id, value: product.id %>
                      <%= f.submit "Add To Cart" %>
                    <% end %>
      <% end %>   
              </div>                    
          </div>
        </div>
      </p>
        <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div>
<br>