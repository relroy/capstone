<div class="container">
  <div class = "row">
    <div class="col-md-9">
      <div class = 'templogo'>
        <a><a href = "http://www.oberweis.com"><img src= 'assets/franchise store logo w-cows.jpg'style='width:300px;height:60px;'></a><h3>Home Treat Delivery</h3>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class="col-md-3">
      <div class = 'temptotal'>
        <h1>Your Order:</h1><br>
          <table class= "table">
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>

  
            <% @carted_products.each do |carted_product| %>
              <tr>
                <td><%= carted_product.product.name %></td>
                <td><%= carted_product.quantity %></td>
                <td>$<%= carted_product.product.price %></td>
              </tr>
            <% end %>
          </table>
            <%= form_for @order do |f| %>
              <%= f.submit "Complete Purchase" %>
            <% end %>
      </div>
    </div>


      <table>  
        <tbody>

    <div class = 'tempproducts'> 
      <% @products.each do |product| %> 
      <p>
        <div class="col-md-3">
          <div class="thumb"> 

             <h4><%= product.name %></h4>            
             <%= image_tag product.photo, :width => "100", :height => "135" %>
             <p>Price: <%= product.price %>
              </p>
              <div><% if user_signed_in? %>
                    <%= form_for @carted_product do |f| %>
                      <%= f.label :quantity %>
                      <%= f.text_field :quantity %>
                      <%= f.hidden_field :product_id, value: product.id %>
                      <%= f.submit "Add To Cart" %>
                    <% end %>
                   <% end %>   
            </div>

             
            </a>          
          </div>
        </div>
        </p>
        <% end %>
        </tbody>
      </table> 
      </div>
    </div>
  </div>
</div>
